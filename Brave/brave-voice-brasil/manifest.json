{
  "manifest_version": 3,
  "name": "Brave Voice Brasil",
  "description": "Extensão simples de leitura em voz alta, focada em português do Brasil e privacidade local.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "tts",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Brave Voice Brasil",
    "default_popup": "popup.html"
  },
  "commands": {
    "read-selection": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Ler o texto selecionado na aba atual"
    },
    "stop-reading": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Parar a leitura em voz alta"
    }
  }
}
